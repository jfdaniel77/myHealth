<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    
</head>

<script type="text/javascript">
    function clearSessionStorage() {
        sessionStorage.clear();
    }
</script>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyHealth", "Dashboard", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Dashboard", "Home")</li>
                    
                    <li>@Html.ActionLink("Appointments", "Appointment", "Appointment")</li>
                    <li>@Html.ActionLink("Health Records", "HealthRecords", "MedicalRecords")</li>
                    
                    

                </ul>
                <div class="btn-group nav navbar-nav navbar-right ">
                    @if (User.Identity.IsAuthenticated)
                    {
                        
                        <div class="btn  dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white; padding-top:1em;">
                            @User.Identity.Name <i class="glyphicon glyphicon-menu-down"></i>
                        </div>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li> @Html.ActionLink(" MyProfile", "MyProfile", "Home", null, new { @class = "dropdown-item btn glyphicon glyphicon-user" })</li>
                            <li><a  class="dropdown-item btn glyphicon glyphicon-comment" href="#" data-toggle="modal" data-target="#exampleModal"> Feedback</a></li>
                            
                            <li>@Html.ActionLink(" Logout", "Logout", "Account", null, new { onclick = "clearSessionStorage()", @class = "dropdown-item btn glyphicon glyphicon-off" })</li>



                        </ul>

                    }
                    else
                    {
                        <ul class="nav navbar-nav">
                            <li> @Html.ActionLink("Login", "Login", "Account")</li>
                        </ul>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @Html.Partial("_GiveFeedback")
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Health web Application</p>
        </footer>
    </div>

  
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
